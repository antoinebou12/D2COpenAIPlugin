{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/app.py"
    },
    {
      "src": "/generate_diagram/(.*)",
      "dest": "/app.py"
    },
    {
      "src": "/openapi.yaml",
      "dest": "/.well-known/openapi.yaml"
    },
    {
      "src": "/.well-known/ai-plugin.json",
      "dest": "/.well-known/ai-plugin.json"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    }
  ]
}
